import matplotlib.pyplot as plt
import os


class PlotLosses():
    '''
    plot loss-.
    '''
    def __init__(self):
        '''
        empty constructor
        '''
        pass

    def plot_loss(self, label_str: str, val: list, dir_save: str):
        fig, ax = plt.subplots(nrows=1, ncols=1, figsize=(12, 6))
        plt.plot(range(len(val['train_loss'])), val['train_loss'], 'r*',
                 label='train')
        plt.plot(range(len(val['val_loss'])), val['val_loss'], 'b<',
                 label='validation')
        plt.grid(color='b', linestyle='--', linewidth='0.5')
        ax.set_xlabel('epochs')
        ax.set_ylabel('loss')
        plt.yscale('log')
        ax.legend(loc='best')
        ax.set_title('loss using Feed Forward Neural Network (FFNN)')
        plt.show()
        fig.savefig(os.path.join(dir_save, 'trainAndValLoss.png'),
                    format='png', dpi=100)
